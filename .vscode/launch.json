    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost with sourcemaps",
            "type": "chrome",
            "request": "launch",
            /*"url": "http://localhost:9876",
            "port": 9876,*/
            "url": "http://localhost:3000",
            "port": 3000,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
            "userDataDir": "${workspaceRoot}/out/chrome"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Launch Program",
            "port": 3000,
            "outFiles": [],
            "sourceMaps": true
        }
    ]
}